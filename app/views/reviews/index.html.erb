<%= render 'shared/navbar' %>
<div class="container" id="form">
<%= simple_form_for @review do |f| %>
  <%= f.input :content, label: "Votre commentaire" %>
  <%= f.input :name, label: "Votre nom" %>
  <%#= f.input :location, label: "Vous venez de" %>
  <%= f.input :date, label: "Dates de votre sÃ©jour" %>
  <%= f.submit "Ajouter", class: "btn btn-primary" %>
<% end %>

<h2 class="text-center">Livre d'or</h2>
<%= paginate @reviews %>
  <% @reviews.each do |review| %>
    <div class="blog-container-tarif">
      <div class="blog-body-tarif">
        <p><%= review.content %></p>
        <i><p><%= review.name %> - <%= review.location %> - <%= review.date %></p></i>
      </div>
    </div>
  <% end %>
</div>


